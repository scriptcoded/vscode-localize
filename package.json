{
	"name": "nuxt-i18n-vs-code",
	"displayName": "Nuxt i18n VS Code",
	"description": "",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.32.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"colors": [
			{
				"id": "myextension.largeNumberBackground",
				"description": "Background decoration color for large numbers",
				"defaults": {
					"dark": "#FF000055",
					"light": "#FF000055",
					"highContrast": "#FF000055"
				}
			}
		],
		"configuration": {
			"title": "Nuxt i18n configuration",
			"properties": {
				"nuxti18n.localesDirectory": {
					"type": "string",
					"default": "lang",
					"description": "Directory that will be used to read localization files."
				},
				"nuxti18n.defaultLocale": {
					"type": "string",
					"default": "en-US",
					"description": "Default locale to load when VS Code starts."
				}
			}
		},
		"commands": [{
			"command": "nuxti18n.switchLocale",
			"title": "Switch Nuxt i18n locale"
		}]
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
